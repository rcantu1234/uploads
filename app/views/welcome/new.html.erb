<h1>New User </h1>
  <%= form_for @user, multipart: true do |f| %>

    <div class='errors'>
    <% @user.errors.each do |err| %>
      <p><%= err %></p>
    <% end %>

    <div class='form-group'>
      <%= f.text_field :full_name, placeholder: 'full name' %>
    </div>

    <div class='form-group'>
      <%= f.file_field :avatar %>
    </div>

    <div class='actions'>
      <%= f.submit 'Create', class: 'btn btn-primary' %>
    </div>
  <% end %>

<p><%= link_to 'Add User', welcome_new_path %></p>

